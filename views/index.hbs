<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fa-solid fa-magnifying-glass"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <a href="./restaurants/new">新增餐廳</a>
  
  
  <div class="row">
    {{#each restaurants}}
    <div class="col-md-4 mx-auto ">
      <!--<div class="card-columns">-->
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              
               <div> {{this.rating}}<i class="fas fa-star fa-xs"></i></div>
               <a href="/restaurants/{{this._id}}/edit">Edit</a>
              </span>
              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display">
                  <button type="submit" class="btn btn-outline-danger">delete</button>
              </form>
            </div>
          </div>
        </a>
    </div>
    {{/each}}
    
    
    
    
    
    
